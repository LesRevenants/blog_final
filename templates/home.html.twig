{% extends 'base.html.twig' %}


{% block body %}

    <div class="jumbotron text-center" style="margin-bottom:0">
        <h1>Welcome to my Symfony website</h1>
        <p>share your ideas</p>

    </div>
    {% if app.user != null %}

    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <a class="navbar-brand" href="#">Home</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">

                <li class="nav-item">
                    <a class="nav-link" href="/postPost/{{ app.user.id }}">Article</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="#">About</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="#">Contact</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="/login">Sign out</a>
                </li>
            </ul>
        </div>
    </nav>
    <div>
        <img src="/public/home-bg.jpg" alt="s">
    </div>

    <div class="container" style="margin-top:30px">
        <div class="row">
        <div class="col-sm-4">
            <h2>About Me</h2>
            <div class="fakeimg">Fake Image</div>
            <h5>{{ app.user.name }}</h5>
            <h5>{{ app.user.email }}</h5>
            <p>{{ app.user.description2 }}</p>
        </div>

            <div class="col-sm-8">

                {% for x in posts %}
                    {% if x.userid == app.user.id %}
                    <h2>{{ x.title }}</h2>
                    <h5>The {{ x.date }}</h5>
                    <p>{{ x.content }}</p>
                    <a href="/deletePost/{{ x.Id }}" class="btn btn-info"> Delete post</a>
                    <hr>
                    {% endif %}
                {% endfor %}

            </div>
        </div>
    </div>

    {% endif %}

    <div class="jumbotron text-center" style="margin-bottom:0">

                <p>&copy; 2018 willem seneron </p>
        <p><a class="nav-link" href="#">About</a></p>
        <p><a class="nav-link" href="#">Contact us</a></p>

    </div>

            {% if app.user == null %}
            <a href="/login" class="btn btn-info"> You need to login to see the blog >></a>
            <a href="connect/auth0" class="btn btn-primary">Login</a>
            {% endif %}

{% endblock %}

