{% extends 'base.html.twig' %}


{% block body %}

    <div class="jumbotron text-center" style="margin-bottom:0">
        <h1>My First Bootstrap 4 Page</h1>
    </div>

    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <a class="navbar-brand" href="#">Home</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="#">About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Contact</a>
                </li>

            </ul>
        </div>
    </nav>

    <div class="container" style="margin-top:30px">
        <div class="row">
            <div class="col-sm-4">
                <h2>About Me</h2>
                <h5>{{ user.name }}</h5>
                <h5>{{ user.email }}</h5>
                <p>Some text about me in culpa qui officia deserunt mollit anim..</p>
                <h3> Menu </h3>
                <ul class="nav nav-pills flex-column">
                    <li class="nav-item">
                        <a class="nav-link active" href="#">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/postPost">Post Article</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Log out</a>
                    </li>

                </ul>
                <hr class="d-sm-none">
            </div>

            <div class="col-sm-8">



                <div class="fakeimg">
                    <img src="/public/image/home-bg.jpg">
                </div>

                {% for x in posts %}
                    <h2>{{ x.title }}</h2>
                    <h5>Title description, Dec 7, 2017</h5>
                    <p>{{ x.content }}</p>
                    <a href="/register" class="btn btn-info"> Delete post</a>
                {% endfor %}


            </div>
        </div>
    </div>

    <div class="jumbotron text-center" style="margin-bottom:0">
        <p>Footer</p>
    </div>

            {% if app.user != null %}
            <a href="/login" class="btn btn-info"> You need to login to see the blog >></a>
            <a href="connect/auth0" class="btn btn-primary">Login</a>
            {% endif %}

{% endblock %}

